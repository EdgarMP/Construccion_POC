<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="edgarmarcopolo.com.construccion_poc.DetalleEncuestaActivity">

        <TextView
            android:id="@+id/encuesta_detalle_id_tienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Tienda"/>
        <RadioGroup
            android:id="@+id/encuesta_detalle_const_rem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construcción"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remodelación"/>
            </RadioGroup>

        <LinearLayout
            android:id="@+id/encuesta_detalle_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="edgarmarcopolo.com.construccion_poc.DetalleEncuestaActivity">

        </LinearLayout>

        <Button
            android:id="@+id/encuesta_boton_capturar_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capturar Foto"
            android:visibility="gone"/>

        <Button
            android:id="@+id/encuesta_boton_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"/>

    </LinearLayout>

</ScrollView>

